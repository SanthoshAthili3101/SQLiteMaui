<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SQLiteMaui.Views.UpdateContact"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="UpdateContact">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Entry
                x:Name="name"
                Placeholder="Enter your Name"
                Text="" />

            <Entry
                x:Name="gender"
                Placeholder="Enter your Gender"
                Text="" />

            <Entry
                x:Name="description"
                Placeholder="Please describe you in a few words"
                Text="" />

            <Button
                x:Name="update"
                HorizontalOptions="Center"
                Text="Update"
                Clicked="update_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>