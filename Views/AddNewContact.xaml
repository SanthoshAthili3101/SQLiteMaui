<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteMaui.Views.AddNewContact"
             Title="AddNewContact">
    <ScrollView>
        <VerticalStackLayout
    Padding="30,0"
    Spacing="25"
    VerticalOptions="Center">

            <Entry
        x:Name="name"
        Placeholder="Enter your Name"
        Text="" />

            <Entry
        x:Name="gender"
        Placeholder="Enter your Gender"
        Text="" />

            <Entry
        x:Name="description"
        Placeholder="Please describe you in a few words"
        Text="" />

            <Button
        x:Name="submit"
        Clicked="submit_Clicked"
        HorizontalOptions="Center"
        Text="Enter" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>